#!/usr/bin/env bash
# HAProxy configuration for SSL termination

# Frontend configuration for www.mysite.com
frontend www.mysite.com
    bind 10.0.0.3:80
    bind 10.0.0.3:443 ssl crt /etc/ssl/certs/mysite.pem
    default_backend web_servers

# Backend configuration (adjust as needed)
backend web_servers
    balance roundrobin
    server web-01 192.168.1.10:80 check
    server web-02 192.168.1.11:80 check
    # Add more backend servers if necessary
